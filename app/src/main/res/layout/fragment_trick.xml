<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.TrickFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Informasi Penyakit Kulit"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />

        <ImageView
            android:id="@+id/disease_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/tutorial"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text" />

        <TextView
            android:id="@+id/disease_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Apa yang Harus Dilakukan?"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/disease_image" />

        <LinearLayout
            android:id="@+id/disease_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/disease_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/disease1_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Enfeksiyonel"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease1_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jika tubuh terkena infeksi seperti bakteri, virus, atau jamur, segera bersihkan area yang terinfeksi dan gunakan obat yang direkomendasikan oleh dokter."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/disease2_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2. Ekzama"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Untuk eksim, hindari pemicu seperti debu atau bahan kimia. Gunakan pelembap khusus dan konsultasikan dengan dokter kulit."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/disease3_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3. Akne"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease3_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci wajah secara rutin dengan pembersih ringan, hindari memencet jerawat, dan gunakan obat jerawat yang direkomendasikan."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/disease4_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4. Pigment"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease4_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jika terjadi perubahan pigmentasi kulit, hindari paparan sinar matahari langsung dan gunakan sunscreen secara rutin."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/disease5_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="5. Benign"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jika menemukan lesi jinak seperti tahi lalat, periksa secara berkala untuk memastikan tidak ada perubahan bentuk atau warna."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/disease6_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6. Malign"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disease6_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Untuk kanker kulit atau lesi ganas, segera konsultasikan dengan dokter kulit untuk diagnosis dan penanganan lebih lanjut."
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
